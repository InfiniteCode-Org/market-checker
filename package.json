{
  "name": "price-monitoring-service",
  "version": "1.0.0",
  "description": "Monitoring service for automated market resolution based on Pyth price feeds",
  "main": "dist/container/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/container/index.js",
    "dev": "ts-node-dev --respawn src/container/index.ts",
    "test:update": "bun run ts-node src/test-updatePriceAndFulfill.ts",
    "test:send-sqs": "bun run src/test-send-sqs-resolution.ts",
    "package:lambda": "./scripts/create-lambda-package.sh",
    "deploy:lambda": "./scripts/deploy-lambda-container.sh",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:monitor": "ts-node src/test-monitor.ts",
    "test:consumer": "ts-node src/test-consumer.ts",
    "test:lambda": "ts-node src/test-lambda-direct.ts"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.470.0",
    "@prisma/client": "^6.8.2",
    "@pythnetwork/hermes-client": "^2.0.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1432.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.13.7",
    "web3": "^1.9.0",
    "winston": "^3.10.0",
    "winston-cloudwatch": "^6.3.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "prisma": "^6.8.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
